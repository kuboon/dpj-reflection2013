- model_class = Speak
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
= render "search_form"
%ul.nav.nav-tabs
  %li{class: params[:order].blank? && :active}
    = sort_link @q, :created_at, "時間順"
  %li{class: params[:order]=="votes" && :active}
    = sort_link @q, :cached_votes_score, "投票順", default_order: :desc
.speaks
  - speaks = @speaks.page(params[:page])
  = paginate speaks
  - speaks.each do |speak|
    %article
      %header
        = link_to speak do
          [#{speak.id}] #{time_ago_in_words speak.created_at}前
        (#{speak.user.display_name})
        = speak.votes.count
        = vote_icon(speak)
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_speak_path(speak), :class => 'btn btn-mini' if can? :edit, speak
      %p
        = with_speak_link(speak.text)
  = paginate speaks
