- model_class = Speak
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %tbody
    - @speaks.each do |speak|
      %tr
        %th= time_ago_in_words speak.created_at
        %th= link_to speak.id, speak
        %td= speak.text + " (#{speak.user.display_name})"
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_speak_path(speak), :class => 'btn btn-mini' if can? :edit, @speak
          = link_to t('.destroy', :default => t("helpers.links.destroy")), speak_path(speak), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' if can? :destroy, @speak

= link_to t('.new', :default => t("helpers.links.new")), new_speak_path, :class => 'btn btn-primary'
